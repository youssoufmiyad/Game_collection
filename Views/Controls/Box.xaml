<UserControl x:Class="Game_collection.Views.Controls.Box"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game_collection.Views.Controls"
             mc:Ignorable="d">
    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="480" Width="410">
        <Grid>
            <Label x:Name="title" Content="{Binding Title}" Margin="0,45,0,0" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Center" MaxWidth="300" HorizontalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            <TextBlock x:Name="description" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center" MaxWidth="380"  TextWrapping="Wrap" Text="{Binding Description}"/>


            <Button Content="{Binding Button}" HorizontalAlignment="Center" Height="55" VerticalAlignment="Top" Width="174" Margin="0,348,0,0" Command="{Binding Command}"/>
        </Grid>
    </Border>
</UserControl>
