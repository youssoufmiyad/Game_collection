<UserControl x:Class="Game_collection.Views.Controls.BigCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game_collection.Views.Controls"
             mc:Ignorable="d">
    <Border  BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="395" Width="300">
        <Grid>
            <Label x:Name="title" Content="{Binding Title}" Margin="0,173,0,0" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Center" MaxWidth="300" HorizontalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>


            <Button Content="{Binding Button}" Command="{Binding Command}" Margin="0,266,102,87" Height="40" HorizontalAlignment="Right" Width="94"/>
        </Grid>
    </Border>
</UserControl>
